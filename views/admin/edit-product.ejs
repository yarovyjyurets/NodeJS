<%- include('../includes/head.ejs') %>
<link rel="stylesheet" href="/css/forms.css">
<link rel="stylesheet" href="/css/product.css">
</head>

<body>
  <%- include('../includes/navigation.ejs') %>

  <main>
    <form class="product-form" action="/admin/<% if (editMode) { %>edit-product/<%= product.id %><% } else { %>add-product<% } %>"
      method="POST">
      <div class="form-control">
        <label for="title">Title</label>
        <input type="text" name="title" id="title"
          value="<% if (editMode) { %><%= product.title %><% } else { %>BMW 328 luxury<% } %>">
      </div>
      <div class="form-control">
        <label for="imageUrl">Image URL</label>
        <input type="text" name="imageUrl" id="imageUrl"
          value="<% if (editMode) { %><%= product.imageUrl %><% } else { %>https://www.lloydmotorgroup.com/ImageLibrary/Vehicle/272642-aotugcmvtEKoUKDBSYFO9A.jpg<% } %>">
      </div>
      <div class="form-control">
        <label for="price">Price</label>
        <input type="number" name="price" id="price" step="0.01"
          value="<% if (editMode) { %><%= product.price %><% } else { %>15000<% } %>">
      </div>
      <div class="form-control">
        <label for="description">Description</label>
        <textarea name="description" id="description"
          rows="5"><% if (editMode) { %><%= product.description %><% } else { %>OSM car!!<% } %></textarea>
      </div>

      <button class="btn" type="submit">
        <% if (editMode) { %>
        Edit Product
        <% } else { %>
        Add Product
        <% } %>
      </button>
    </form>
  </main>
</body>
<%- include('../includes/end.ejs') %>