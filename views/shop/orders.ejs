<%- include('../includes/head.ejs') %>
</head>

<body>
  <%- include('../includes/navigation.ejs') %>
  <main>
    <% if (orders.length <= 0) { %>
    <h1>Nothing there!</h1>
    <% } else { %>
    <ul>
      <% orders.forEach(order => { %>
      <li>
        <h1># <%= order.id || order._id %></h1>
        <ul>
          <% order.Products.forEach(product => { %>
          <li><%= product.title %> (<%= product.qty || product.OrderItem.qty %>). Price: <%= product.price %></li>
          <% }); %>
        </ul>
        <hr>
        <h3 class="centered">Total price <%= order.totalPrice %></h3>
        <hr>
      </li>
      <% }); %>
    </ul>
    <% } %>
  </main>
</body>
<%- include('../includes/end.ejs') %>